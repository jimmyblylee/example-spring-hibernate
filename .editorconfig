root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = crlf

[*.{html,xml,js,css,scss,bat,cmd,ini,sql,sh,py}]
indent_style = space
indent_size = 4
charset = utf-8
trim_trailing_whitespace = true
# new line for join code
insert_final_newline = true

[*.java]
indent_style = space
indent_size = 4
charset = utf-8
trim_trailing_whitespace = true
# no need to join code
insert_final_newline = false